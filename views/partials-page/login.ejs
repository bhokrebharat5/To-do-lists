
<div class="col-md-10">
    <div class="jumbotron" style="margin: 20% auto;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <h3 class="text-primary text-center font-weight-bold m-2"> Login </h3>
        <form action="/user/login" method="post" class="loginForm">
            <div class="text-danger error">
                <% if (typeof msg !== 'undefined' && msg.length > 0 && !status ) { %>
                    <div class="alert-danger p-1 mb-3"><%= msg %></div>
                <% } %>

                <% if (typeof msg !== 'undefined' && msg.length > 0 && status ) { %>
                    <div class="alert-success p-1 mb-3"><%= msg %></div>
                <% } %>
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" name="email" class="form-control" placeholder="Enter email" id="email">
            </div>
            <div class="form-group">
                <label for="pwd">Password:</label>
                <input type="password" name="password" class="form-control" placeholder="Enter password" id="password">
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary mr-auto">Submit</button>
            </div>
        </form> 
    </div>
</div>
